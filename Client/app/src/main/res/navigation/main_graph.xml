<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    tools:ignore="InvalidNavigation"
    app:startDestination="@id/offerEditorFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.t3ddyss.clother.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.t3ddyss.clother.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/addOfferFragment"
        android:name="com.t3ddyss.clother.ui.offer_add.AddOfferFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_offer_add" />

    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.t3ddyss.clother.ui.messages.MessagesFragment"
        android:label="@string/messages"
        tools:layout="@layout/fragment_messages" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.t3ddyss.clother.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_offerEditorFragment"
            app:destination="@id/offerEditorFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.t3ddyss.clother.ui.sign_up.SignUpFragment"
        android:label="@string/sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_emailActionFragment"
            app:destination="@id/emailActionFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/emailActionFragment"
        android:name="com.t3ddyss.clother.ui.email_confirmation.EmailConfirmationFragment"
        android:label="@string/check_inbox"
        tools:layout="@layout/fragment_email_confirmation">
        <argument
            android:name="email_action_message"
            app:argType="string" />
        <argument
            android:name="email_address"
            app:argType="string" />
        <action
            android:id="@+id/action_emailActionFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.t3ddyss.clother.ui.sign_in.SignInFragment"
        android:label="@string/sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signInFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.t3ddyss.clother.ui.password_recovery.PasswordRecoveryFragment"
        android:label="@string/reset_password"
        tools:layout="@layout/fragment_password_recovery">
        <action
            android:id="@+id/action_resetPasswordFragment_to_emailActionFragment"
            app:destination="@id/emailActionFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/offerEditorFragment"
        android:name="com.t3ddyss.clother.ui.offer_editor.OfferEditorFragment"
        android:label="fragment_offer_editor"
        tools:layout="@layout/fragment_offer_editor" >
        <action
            android:id="@+id/action_offerEditorFragment_to_galleryFragment"
            app:destination="@id/galleryFragment" />
    </fragment>
    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.t3ddyss.clother.ui.gallery.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery" />
</navigation>